{
  "name": "vue-finances",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --port 8000",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "docker:build": "docker build -t frontend .",
    "docker:run": "docker run -d  -p 80:80 --name frontend frontend",
    "docker:down": "docker stop frontend",
    "docker:remove": "docker container rm frontend"
  },
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "chart.js": "^2.9.4",
    "core-js": "^3.6.5",
    "graphql": "^15.4.0",
    "material-design-icons-iconfont": "^6.1.0",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "roboto-fontface": "*",
    "rxjs": "^6.6.3",
    "vue": "^2.6.11",
    "vue-router": "^3.4.9",
    "vuelidate": "^0.7.6",
    "vuetify": "^2.3.16",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.0.5",
    "stylus": "^0.54.8",
    "stylus-loader": "^3.0.2",
    "vue-cli-plugin-apollo": "^0.22.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-case-declarations": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
